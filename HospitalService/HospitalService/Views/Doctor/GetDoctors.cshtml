@model HospitalService.ViewModels.DoctorListViewModel

@{
    Layout = "_Layout";
}

<h3>@ViewBag.Title</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">NAME</th>
            <th scope="col">EXPERIENCE</th>
            <th scope="col">IMAGE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetDoctors)
        {
            <tr>
                <td class="name-surname"><span style="color:darkblue">@item.FirstName</span>@item.LastName</td>
                <td>@item.Experience</td>
                <td><img src="@item.Image" /></td>
            </tr>
        }
    </tbody>
</table>
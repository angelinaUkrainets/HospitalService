@model HospitalService.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}



<link href="~/css/loginStyle.css" rel="stylesheet" />

<div class="body"></div>
<div class="grad"></div>
<div class="header">
    <div>Hospital<span>Service</span></div>
</div>
<br>
<form method="post" asp-controller="Home" asp-action="Login">
    <div class="login">
        <input type="text" placeholder="username" name="user"><br>
        <input type="password" placeholder="password" name="password"><br>
        <input type="submit" class="btnConfirm" value="Login">
        <input type="button" class="btnConfirm" value="Register" />
        <input type="button" class="btnConfirm" value="Register as Doctor" />
    </div>
</form>


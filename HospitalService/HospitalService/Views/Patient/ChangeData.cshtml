@model HospitalService.ViewModels.YourProfileViewModel
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/YourProfileStyle.css" />

<div class="justify-content-center" style="margin-top:90px; margin-left:auto; margin-right:auto">
    <div class="card border-dark mb-3 main-div" style="max-width: 75%; color:transparent!important">
        <div class="card-body text-dark">
            <h5 class="card-title">Change Data</h5>
            <div class="row">
                <label asp-for="FirstName"></label><br />
                <input asp-for="FirstName" type="text" placeholder="First Name" value="@Model.FirstName"><br>
                <span asp-validation-for="FirstName"></span>

                <label asp-for="LastName"></label><br />
                <input asp-for="LastName" type="text" placeholder="Last Name" value="@Model.LastName"><br>
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="row">
                <label asp-for="Login"></label><br />
                <input asp-for="Login" type="text" placeholder="Login" value="@Model.Login"><br>
                <span asp-validation-for="Login"></span>

                <label asp-for="ImagePath"></label><br />
                <input asp-for="ImagePath" type="file" style="width:50px" name="uploadedFile" placeholder="Image" value="@Model.ImagePath">
                <span asp-validation-for="ImagePath"></span>
            </div>

            <div class="row">
                <label asp-for="Email"></label><br />
                <input asp-for="Email" type="email" placeholder="Email" value="@Model.Email"><br>
                <span asp-validation-for="Email"></span>

                <label asp-for="DateBirth"></label><br />
                <input asp-for="DateBirth" type="datetime" placeholder="Date of Birth" value="@Model.DateBirth"><br>
                <span asp-validation-for="DateBirth"></span>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>